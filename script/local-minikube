#!/bin/bash

# This is a script to automatically start a local minikube cluster for bot development

set -e # Prevent any kind of script failures

# Global Directory Variables
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )" # The directory of this script
REPO_DIR="$(dirname "$SCRIPT_DIR")" # The root directory of this repository

echo "ğŸ” Checking for required dependencies..."

set +e # Allow failures when checking for dependencies

which minikube > /dev/null

if [ $? -ne 0 ]; then
  echo "âŒ Please install the minikube to continue! https://minikube.sigs.k8s.io/docs/start/ | Exiting..."
  exit 1
else
  echo "âœ… minikube is installed"
fi

which kubectl > /dev/null

if [ $? -ne 0 ]; then
  echo "âŒ Please install kubectl to continue! https://kubernetes.io/docs/tasks/tools/install-kubectl-linux/ | Exiting..."
  exit 1
else
  echo "âœ… kubectl is installed"
fi

which docker > /dev/null

if [ $? -ne 0 ]; then
  echo "âŒ Please install docker to continue! https://docs.docker.com/get-docker/ | Exiting..."
  exit 1
else
  echo "âœ… docker is installed"
fi

set -e # Prevent any kind of script failures

# Check if the minikube cluster is running
if [ "$(minikube status 2&> /dev/null; echo $?)" -ne 0 ]; then
  read -p "â” Could not determine if minikube is running, would you like to start minikube now (y/n)? " CONT
  if [ "$CONT" = "y" ]; then
    echo "âš™ï¸ Starting minikube...";
    minikube start
  else
    echo "âš ï¸ Continuing... (minikube may not be running)";
  fi
else
  echo "âœ… minikube is already running"
fi

echo "ğŸ³ Binding Docker to minikube Docker engine..."
eval $(minikube docker-env)

echo "ğŸ”¨ Building errbot:latest image"
docker build -t errbot:latest $REPO_DIR/src/errbot

echo "ğŸ”¨ Building localstack-errbot:latest image"
docker build -t localstack-errbot:latest $REPO_DIR/script/localstack

echo -e "\nğŸš€ Deploying k8s manifests to minikube cluster..."

echo -e "â• Creating namespace errbot"
kubectl apply -f $REPO_DIR/script/k8s/errbot/namespace.yaml
echo -e "â• Creating namespace localstack"
kubectl apply -f $REPO_DIR/script/k8s/localstack/namespace.yaml
echo -e "â• Recursively deploying all other manifests..."
kubectl apply -f script/k8s/ -R

echo -e "\nTip: 'kubectl apply -f script/k8s/ -R' will apply all manifests for this local stack"

echo -e "\nâœ… You're all set!"
